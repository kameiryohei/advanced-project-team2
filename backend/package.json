{
	"name": "backend",
	"type": "module",
	"scripts": {
		"dev": "wrangler dev",
		"build": "wrangler build",
		"tsc": "tsc --noEmit",
		"deploy": "wrangler deploy --minify",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"lint": "biome lint",
		"format": "biome format",
		"check": "biome check",
