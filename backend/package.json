{
	"name": "backend",
	"type": "module",
	"scripts": {
		"dev": "wrangler dev",
		"deploy": "wrangler deploy --minify",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"lint": "biome lint",
		"format": "biome format",
		"check": "biome check",
		"lint:fix": "biome lint --write",
		"format:fix": "biome format --write",
