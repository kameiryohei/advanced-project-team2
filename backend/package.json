		"db:init": "wrangler d1 execute advanced-project-team2 --local --file=db/schema.sql",
		"db:migrate": "wrangler d1 migrations apply advanced-project-team2 --local",
		"db:console": "wrangler d1 execute advanced-project-team2 --local --command"
	},
	"dependencies": {
		"hono": "^4.9.10"
	},
	"devDependencies": {
		"wrangler": "^4.4.0"
	}
